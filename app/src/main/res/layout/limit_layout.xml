<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_limit_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_limit_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:textColor="@color/btn_red"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距结束"
            android:textColor="@color/filter_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_limit_t1"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bo_color_shape"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text=":"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_limit_t2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/bo_color_shape"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text=":"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_limit_t3"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/bo_color_shape"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_arrow_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_limit" />

</LinearLayout>