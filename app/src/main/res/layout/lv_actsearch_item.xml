<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:background="#f8f8f8"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_margin="11dp"

        android:background="@drawable/img_stroke"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_search_goods"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="洋酒Remy Martin人头马XO700ml特优香槟洋酒Remy Martin人头马"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_search_pice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:text="¥ 1680.00"
            android:textColor="@color/tv_red"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_search_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:text="销量"
            android:textColor="@color/spec_text_color"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>