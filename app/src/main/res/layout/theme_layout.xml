<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:text="主题街"
            android:textColor="#b63235"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_theme1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_theme_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="11dp"
                android:text="滋补品馆"
                android:textColor="#333333"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_theme_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="滋阴补阳"
                android:textColor="#cccccc"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/iv_theme_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:src="@mipmap/default_image" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f1f1f1" />

        <LinearLayout
            android:id="@+id/ll_theme2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_theme_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="11dp"
                android:text="葡萄酒馆"
                android:textColor="#333333"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_theme_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="好喝的葡萄酒"
                android:textColor="#cccccc"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/iv_theme_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:src="@mipmap/default_image" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_theme3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_theme_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:text="白酒馆"
                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_theme_desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="香醇的白酒"
                android:textColor="#cccccc"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_theme_image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_image" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f1f1f1" />

        <LinearLayout
            android:id="@+id/ll_theme4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_theme_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:text="洋酒馆"
                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_theme_desc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="洋酒馆"
                android:textColor="#cccccc"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_theme_image4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_image" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f1f1f1" />

        <LinearLayout
            android:id="@+id/ll_theme5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_theme_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:text="啤酒馆"
                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_theme_desc5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="敞开肚皮来吧"
                android:textColor="#cccccc"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_theme_image5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_image" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f1f1f1" />

        <LinearLayout
            android:id="@+id/ll_theme6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_theme_name6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:text="黄酒/养生酒"
                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_theme_desc6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="7dp"
                android:text="国粹在此"
                android:textColor="#cccccc"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_theme_image6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_image" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
