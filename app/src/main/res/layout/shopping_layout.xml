<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#f2ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="购物车"
            android:textColor="#333333"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="编辑"
            android:textColor="#333333"
            android:textSize="18dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.wjhgw.ui.view.listview.MyListView
        android:id="@+id/lv_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginTop="1dp"
        android:fastScrollEnabled="false"
        android:scrollbars="none"
        android:divider="#00000000"
        android:dividerHeight="0dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:layout_gravity="bottom">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#000000"
                android:layout_weight="5">

                <LinearLayout
                    android:id="@+id/ll_select"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp">
                <ImageView
                    android:id="@+id/iv_select"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_default"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:text="全选"/>
               </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:text="合计："/>
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:text="¥ 9999.00"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#f14f4f"
                android:gravity="center"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="19sp"
                    android:text="去结算"/>
                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:text="(1)"/>
            </LinearLayout>
            </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_edit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:background="#eaedf1"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_select1"
                android:layout_width="wrap_content"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/iv_select1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_default"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:text="全选"/>
            </LinearLayout>

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="#f14f4f"
                    android:textSize="14sp"
                    android:text="删除"/>
            </FrameLayout>

        </FrameLayout>
        
    </LinearLayout>
</LinearLayout>
