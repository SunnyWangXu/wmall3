<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/group_purchase_layout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:text="本期组团购"
            android:textColor="#d63235"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="距结束"
                android:textColor="@color/light_gray" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bo_color_shape"
                android:gravity="center"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bo_color_shape"
                android:gravity="center"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/time3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bo_color_shape"
                android:gravity="center"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_home_group_purchase"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="9dp"
            android:src="@mipmap/default_image" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/auction_layout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="11dp"
            android:text="本期拍卖"
            android:textColor="#d63235"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="距开始"
                android:textColor="@color/light_gray" />

            <TextView
                android:id="@+id/time4"
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bo_color_shape"
                android:gravity="center"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/time5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bo_color_shape"
                android:gravity="center"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/time6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bo_color_shape"
                android:gravity="center"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp">

            <ImageView
                android:id="@+id/iv_home_auction"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_home_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#666666"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d63235" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
