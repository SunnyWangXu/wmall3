<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />

    <LinearLayout
        android:id="@+id/ll_give_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d63235"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_give_one"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_give_one" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_zhangbei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_zhangbei" />

            <ImageView
                android:id="@+id/iv_dear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_dear" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tongshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_tongshi" />

            <ImageView
                android:id="@+id/iv_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_friend" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_give_more"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f19149"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_give_more" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_give_more_people"
                android:layout_width="340dp"
                android:layout_height="152dp"
                android:src="@mipmap/ic_more_people" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>