<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qrcode_scanner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_homepage_select"
            android:text="扫码" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/search_relativelayout_shape"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@null"
                android:hint="搜索"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="17sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:background="#efefef"
            android:gravity="center">

            <ImageView
                android:id="@+id/d2_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/login_name"
                android:src="@mipmap/ic_mine_select"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spec_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.wjhgw.ui.view.listview.MyListView
                android:id="@+id/discovery_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f4f6"
                android:divider="#00000000"
                android:fastScrollEnabled="false"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f1f1f1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_goods_class"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY" />

            <ListView
                android:id="@+id/lv_attr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scrollbars="none" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>