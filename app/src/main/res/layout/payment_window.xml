<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v_window"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="付款方式"
            android:textColor="@color/title_color"
            android:textSize="19sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/line_bg" />

        <LinearLayout
            android:id="@+id/ll_online_pay"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="在线支付（推荐）"
                android:textColor="@color/title_color"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_online_pay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_order_select" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_downline_pay"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="货到付款"
                android:textColor="@color/title_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_downline_pay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_order_blank" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_payment_confirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/btn_red"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>