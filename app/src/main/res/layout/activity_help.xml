<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/line_bg" />

    <LinearLayout
        android:id="@+id/ll_feedback_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="反馈类型"
            android:textColor="@color/title_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_feedback_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能意见"
            android:textColor="@color/title_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="14dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_drop" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/line_bg" />

    <EditText
        android:id="@+id/ed_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@null"
        android:gravity="top"
        android:hint="很高兴倾听你的声音,我们将持续优化改进！"
        android:maxLength="300"
        android:textColorHint="@color/gray"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/line_bg" />

    <EditText
        android:id="@+id/ed_feedback_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="输入手机号码/邮箱(选填)"
        android:maxLength="50"
        android:textColor="@color/title_color"
        android:textColorHint="@color/gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:background="@color/line_bg">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_feedback"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|right"
                android:src="@mipmap/ic_upload" />

            <ImageView
                android:id="@+id/iv_feedback_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_delete2"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/btn_red"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>