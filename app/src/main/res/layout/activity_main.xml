<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#666666"
        android:layout_weight="1" >
    </FrameLayout>


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:textColor="@drawable/text_color_scelector"
            android:drawableTop="@drawable/index"
            android:gravity="center_horizontal"
            android:text="首页" />

        <RadioButton
            android:id="@+id/category_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:textColor="@drawable/text_color_scelector"
            android:drawableTop="@drawable/classification"
            android:gravity="center"
            android:text="分类" />

        <RadioButton
            android:id="@+id/found_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/text_color_scelector"
            android:checked="false"
            android:drawableTop="@drawable/found"
            android:gravity="center"
            android:text="发现" />

        <RadioButton
            android:id="@+id/by_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:textColor="@drawable/text_color_scelector"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/shopping_car"
            android:gravity="center"
            android:text="购物车" />

        <RadioButton
            android:id="@+id/my_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/text_color_scelector"

            android:checked="false"
            android:drawableTop="@drawable/my"
            android:gravity="center"
            android:text="我的" />

    </RadioGroup>

</LinearLayout>
