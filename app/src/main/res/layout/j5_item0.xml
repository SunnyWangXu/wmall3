<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_red">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@mipmap/ic_red_gift" />

    <TextView
        android:id="@+id/tv_limit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="多人礼包"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_gift_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="已过期"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <com.wjhgw.ui.DiyView.RoundImageView
        android:id="@+id/iv_j5_use_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:src="@mipmap/ic_default_avatar" />

    <TextView
        android:id="@+id/tv_member_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="57dp"
        android:text="老王的大礼包"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_gift_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="36dp"
        android:text="一点心意,希望您能喜欢！"
        android:textColor="#FFBFBF"
        android:textSize="12sp" />
    </FrameLayout>
</FrameLayout>