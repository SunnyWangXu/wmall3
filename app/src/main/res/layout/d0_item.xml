<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_app"/>

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#333333"
                android:text="万嘉欢购"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_state_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:textColor="#f25252"
                android:textSize="13dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#cccccc" />

        <com.wjhgw.ui.view.listview.MyListView
            android:id="@+id/d0_item_list"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="1dp"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:fastScrollEnabled="false"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/tv_order_amount"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="25dp"
                android:layout_gravity="center|right"
                android:gravity="center_vertical"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="36dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_gray"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_button3"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/background_radius_gray"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="#666666"
                android:textSize="15dp"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/tv_button2"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center"
                android:background="@drawable/background_radius_gray"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="#666666"
                android:textSize="15dp"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/tv_button1"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="right|center"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_radius_red"
                android:gravity="center"
                android:text="商品评价"
                android:textColor="#666666"
                android:textSize="15dp"
                android:visibility="gone"
                 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
